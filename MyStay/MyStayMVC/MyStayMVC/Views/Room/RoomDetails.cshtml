@model MyStayMVC.Models.RoomDetails
@{
    ViewData["Title"] = "RoomDetails";
    ViewBag.Active = "HotelInfo";
}
        <div class="widget box">
            <div class="widget-header">
                <h4><i class="icon-reorder"></i> Room Details - Hotel @Html.DisplayFor(model=>model.HotelName)</h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("SubmitRoomDetails", "Room", FormMethod.Post, new { @id = "SubmitRoomDetails" }))
                {
                    @Html.HiddenFor(model => model.ParentHotelID);  
                <div class="row">
                    <div class="form-group  col-md-3">
                        @Html.TextBoxFor(model => model.RoomNumber, new { @class = "form-control", @placeholder = "Enter Room Number" })
                        @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "label label-danger" })
                    </div>
                    <div class="form-group col-md-3">
                        @Html.DropDownListFor(model=>model.RoomType,new SelectList(new List<SelectListItem> {
                                             new SelectListItem { Text = "Luxury", Value = "Luxury"},
                                             new SelectListItem { Text = "Non-Luxury", Value = "Non-Luxury"}
                       },"Value","Text"),"-- Select Room Type --",
                       new { @class = "form-control col-md-3" })
                        @Html.ValidationMessageFor(model => model.RoomType, "", new { @class = "label label-danger" })
                    </div>
                    <div class="form-group  col-md-3">
                        @Html.TextBoxFor(model => model.NumberofBeds, new {@class = "form-control", @placeholder = "Enter Number of Beds" })
                        @Html.ValidationMessageFor(model => model.NumberofBeds, "", new { @class = "label label-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group  col-md-3">
                        @Html.DropDownListFor(model=>model.Service, new SelectList(new List<SelectListItem> {
                                           new SelectListItem { Text = "All-Day Breakfast", Value = "All-Day Breakfast"},
                                           new SelectListItem { Text = "Pick-up/Drop-off", Value = "Pick-up/Drop-off"},
                                           new SelectListItem { Text = "Luggage Forwarding", Value = "Luggage Forwarding"},
                     },"Value","Text"),"-- Select Service --",
                     new { @class = "form-control col-md-3" })
                        @Html.ValidationMessageFor(model => model.Service, "", new { @class = "label label-danger" })
                    </div>
                    <div class="form-group  col-md-3">
                        @Html.TextBoxFor(model => model.Price, new {@class = "form-control", @placeholder = "Enter Price" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "label label-danger" })
                    </div>
                    <div class="form-group col-md-1a">
                        <button type="submit" class="btn btncusSave btn-block btn-flat">Save</button>
                    </div>
                    <div class="form-group col-md-1a" style="margin-left:-10px;">
                        <button type="button" class="btn btncusCancel btn-block btn-flat" onclick="location.href='@Url.Action("HotelDetails","HotelInfo")'">Cancel</button>
                    </div>
                </div>
                }
                    @Html.Partial("~/Views/Room/_RoomDetailsList.cshtml", (List<MyStayMVC.Models.RoomDetails>)(Model.lstRoomDetails))
            </div>
            
        </div>
        <!-- /Validation Example 1 -->



