        $(document).ready(function () {
            "use strict";

            App.init(); // Init layout and core plugins
            Plugins.init(); // Init all plugins
            FormComponents.init(); // Init all form-specific plugins
        });
    </script>

    @*<script src="~/Popup.js"></script>*@
</head>
<body class="breakpoint-1200" style="padding:5px;">

    <!-- Header -->
    <header class="header navbar navbar-fixed-top" role="banner" style="background-color:#f39105;padding-top: 0.3125rem;padding-bottom: 0.3125rem;">
        <!-- Top Navigation Bar -->
        <!-- Only visible on smartphones, menu toggle -->
        <div class="container">
            

            <!-- Logo -->
            <a class="navbar-brand" href="@Url.Action("HotelDetails","HotelInfo")">
                MyStay @*<img src="~/images/MindtreeLogo.png" alt="logo" style="width:60%;">*@
            </a>
          

            <ul class="nav navbar-nav navbar-right" style="margin-right: -50px;">
                <!-- User Login Dropdown -->
                <li class="dropdown user">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-male"></i>
                        <span class="username">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @User.Identity.Name
                            }
                            else
                            {
                                @HttpContextAccessor.HttpContext.Session.GetString("UserName")
                            }
                        </span>
                        <i class="icon-caret-down small"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Logout","LogIn")"><i class="icon-key"></i> Log Out</a></li>
                    </ul>
                </li>
                <!-- /user login dropdown -->
            </ul>
           
        </div>
        <!-- /Sidebar Toggler -->
        <!-- Top Right Menu -->
        <!-- /Top Right Menu -->
        <!-- /top navigation bar -->

    </header> <!-- /.header -->
    <nav class="navbar-expand-sm bg-light" style="padding-top: 60px;">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(ViewBag.Active=="HotelInfo"?"active topmenuActive":"")" asp-area="" asp-controller="HotelInfo" asp-action="HotelDetails" style="color:black">HOTEL INFO </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(ViewBag.Active=="Booking"?"active topmenuActive":"")" asp-area="" asp-controller="Booking" asp-action="BookingDetails" style="color:black">BOOKING</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.Active=="UploadImage"?"active topmenuActive":"")" asp-area="" asp-controller="UploadImage" asp-action="UploadImage" style="color:black">UPLOAD IMAGE</a>
            </li>
        </ul>
        </nav>
        <div class="body-content minheight_450">
